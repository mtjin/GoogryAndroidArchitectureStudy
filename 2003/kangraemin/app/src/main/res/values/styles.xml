<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.MovieDetails" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">@dimen/text_detail_top_margin</item>
        <item name="android:textSize">@dimen/text_detail</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="AppTheme.LoginEditText" parent="Widget.AppCompat.EditText">
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textColor">@color/text_normal</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

</resources>
